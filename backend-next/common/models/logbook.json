{
    "name": "Logbook",
    "description": "Logbook for proposals",
    "base": "PersistedModel",
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "properties": {
        "logbookId": {
            "type": "string",
            "id": true,
            "required": true
        },
        "name": {
            "type": "string",
            "required": true
        },
        "members": {
            "type": ["string"],
            "required": true
        },
        "userMessages": {
            "type": ["object"]
        },
        "botMessages": {
            "type": ["object"]
        },
        "images": {
            "type": ["object"]
        }
    },
    "validations": [],
    "relations": {
        "proposal": {
            "type": "belongsTo",
            "model": "Proposal",
            "foreignKey": ""
        },
        "users": {
            "type": "hasMany",
            "model": "User",
            "foreignKey": ""
        }
    },
    "acls": [],
    "methods": {
        "addUserMessage": {
            "accepts": [
                {
                    "arg": "id",
                    "type": "string",
                    "required": true
                }
            ],
            "returns": {
                "arg": "addUserMessage",
                "type": "object"
            },
            "description": "Adds new user message to logbook",
            "http": {
                "path": "/{id}/addUserMessage",
                "verb": "post"
            }
        },
        "findAllUserMessages": {
            "accepts": [
                {
                    "arg": "id",
                    "type": "string",
                    "required": true
                }
            ],
            "returns": {
                "arg": "findAllUserMessages",
                "type": ["object"]
            },
            "description": "Gets all text messages sent by users",
            "http": {
                "path": "/{id}/findAllUserMessages",
                "verb": "get"
            }
        },
        "addBotMessage": {
            "accepts": [
                {
                    "arg": "id",
                    "type": "string",
                    "required": true
                }
            ],
            "returns": {
                "arg": "addBotMessage",
                "type": "object"
            },
            "description": "Adds new bot message to logbook",
            "http": {
                "path": "/{id}/addBotMessage",
                "verb": "post"
            }
        },
        "findAllBotMessages": {
            "accepts": [
                {
                    "arg": "id",
                    "type": "string",
                    "required": true
                }
            ],
            "returns": {
                "arg": "findAllBotMessages",
                "type": ["object"]
            },
            "description": "Gets all text messages sent by the bot",
            "http": {
                "path": "/{id}/findAllBotMessages",
                "verb": "get"
            }
        },
        "addImage": {
            "accepts": [
                {
                    "arg": "id",
                    "type": "string",
                    "required": true
                }
            ],
            "returns": {
                "arg": "addImage",
                "type": "object"
            },
            "description": "Adds new image to logbook",
            "http": {
                "path": "/{id}/addImage",
                "verb": "post"
            }
        },
        "findAllImages": {
            "accepts": [
                {
                    "arg": "id",
                    "type": "string",
                    "required": true
                }
            ],
            "returns": {
                "arg": "findAllImages",
                "type": ["object"]
            },
            "description": "Gets all images from logbook",
            "http": {
                "path": "/{id}/findAllImages",
                "verb": "get"
            }
        }
    }
}
