{
    "name": "Sample",
    "description": "Models describing the characteristics of the samples to be investigated. Raw datasets should be linked to such sample definitions.",
    "base": "Ownable",
    "strict": true,
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "properties": {
        "sampleId": {
            "type": "string",
            "id": true
        },
        "owner": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "createdAt": {
            "type": "date"
        },
        "sampleCharacteristics": {
            "type": "object"
        },
        "isPublished": {
            "type": "boolean",
            "description": "Flag is true when data are made publically available"
        }
    },
    "validations": [],
    "relations": {
        "attachments": {
            "type": "hasMany",
            "model": "Attachment",
            "foreignKey": ""
        },
        "datasets": {
            "type": "belongsTo",
            "model": "Dataset",
            "foreignKey": ""
        }
    },
    "acls": [{
            "accessType": "READ",
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "ALLOW"
        },
        {
            "accessType": "*",
            "principalType": "ROLE",
            "principalId": "$authenticated",
            "permission": "ALLOW"
        }
    ],
    "methods": {}
}
