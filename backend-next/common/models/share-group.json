{
    "name": "ShareGroup",
    "description": "Definition of groups to share datasets between scicat users",
    "plural": "ShareGroups",
    "base": "PersistedModel",
    "idInjection": false,
    "options": {
        "validateUpsert": true
    },
    "properties": {
        "members": {
            "type": ["string"],
            "description": "Defines the emails of users that data is shared to"
        },
        "datasets": {
            "type": ["string"],
            "description": "Defines the datasets which are shared"
        }
    },
    "validations": [],
    "relations": {},
    "acls": [
        {
            "accessType": "*",
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "DENY"
        },
        {
            "accessType": "*",
            "principalType": "ROLE",
            "principalId": "$authenticated",
            "permission": "ALLOW"
        }
    ],
    "methods": {
        "getGroups": {
            "accepts": [
              {
                "arg": "user",
                "type": "string"
              },
              {
                "arg": "options",
                "type": "object",
                "http": "optionsFromRequest"
              }
            ],
            "returns": {
              "arg": "findByInstrumentAndDate",
              "type": "Object"
            },
            "description": "Find proposal that took data at specified instrument and time",
            "http": {
              "path": "/getGroups",
              "verb": "get"
            }
          }
    }
}
